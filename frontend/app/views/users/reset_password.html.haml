%h1= "Zmiana hasła"
= form(:action => resource(:users, :perform_reset_password), :method => :post) do
  %fieldset
    = hidden_field(:name => "token", :value => @token)
    .ctrl= password_field(:name => "password", :label => "Nowe hasło")
    .ctrl= password_field(:name => "password_confirmation", :label => "Potwierdź nowe hasło")
    .ctrl.buttons= button("Zapisz")

