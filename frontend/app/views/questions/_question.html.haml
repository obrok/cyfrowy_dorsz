%li{ :id => "question-#{question.id}"}
  %span.title= h(question.title)
  %span.type= h(question.question_type)
  %span.action= link_to(image_tag('/images/answer.png', :alt => 'odpowiedzi', :title => "Odpowiedzi do pytania #{h(question.text)}"), resource(question.poll, question, :results), :class => 'image-link')
  %span.action= link_to(image_tag('/images/edit.png', :alt => 'edytuj'), resource(question.poll, question, :edit), :class => 'image-link')
  %span.action= link_to(image_tag('/images/delete.png', :alt => 'usuń', :title => 'usuń'), resource(question.poll, question, :delete), :class => 'image-link delete-question')
- if question.choice?
  %span.possible_answers
    = partial("possible_answers/form", :question => question)
  %span
    - question.possible_answers.each_with_index do |answer, index|
      = h(answer)
      = link_to(image_tag('/images/delete.png', :alt => 'usuń', :title => "Usuń #{h(answer)}"), url(:controller => :possible_answers, :question_id => question.id, :answer_id => index, :action => :delete), :class => 'image-link delete-question')
