= form(:action => resource(question.poll, question, :possible_answers), :method => :post) do
  %fieldset
  .ctrl
    - if question.choice?
      = text_field(:text, :label => "Nowa odpowiedź", :name => "answer")
    - if question.teacher?
      = select(:name => "answer", :label => "Nowy prowadzący", :collection => question.possible_teachers)
  .ctrl.buttons
    = submit("Dodaj odpowiedź")
